<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jimmy.mushroomseeker.GameScreenActivity"
    android:background="@drawable/grassbackground">

    <RelativeLayout
        android:id="@+id/gameScreenRelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGameState"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tvScanState"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TableLayout
        android:id="@+id/game_table"
        android:layout_below="@id/gameScreenRelativeLayout1"
        android:layout_above="@id/tvGamesPlayed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">
    </TableLayout>

    <TextView
        android:id="@+id/tvGamesPlayed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHighScoreText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/game_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
